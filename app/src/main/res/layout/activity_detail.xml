<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martin.lolli.DetailActivity">

    <ImageView
        android:id="@+id/ivHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/pic"
        android:transitionName="photo" />

    <TextView
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivHero"
        android:layout_centerHorizontal="true"
        android:text="YES"
        android:textSize="150sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yes"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer neque sapien, commodo sed libero sed, aliquam imperdiet urna. Sed ac venenatis purus. Nunc convallis nisi in orci molestie, at fermentum metus mollis. In in est ut risus blandit imperdiet. Etiam vitae sapien diam." />

</RelativeLayout>
